<UserControl x:Class="DrWhere.Components.ResultsPane"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:DrWhere.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <materialDesign:Card Background="White" materialDesign:ShadowAssist.ShadowDepth="Depth2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" UniformCornerRadius="10">
        <StackPanel Orientation="Vertical" Margin="10,10,10,10">
            <Label Content="Showing Results for" FontSize="18"/>
            <DataGrid Name="ResultsGrid" ItemsSource="{Binding SearchResults}" AutoGenerateColumns="True" VerticalAlignment="Stretch" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                
            </DataGrid>
        </StackPanel>
    </materialDesign:Card>
</UserControl>
